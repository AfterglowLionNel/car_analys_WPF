<Application x:Class="CarAnalysisDashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:ViewModeConverter x:Key="ViewModeConverter" xmlns:converters="clr-namespace:CarAnalysisDashboard.Converters"/>
            <converters:ViewModeVisibilityConverter x:Key="ViewModeVisibilityConverter" xmlns:converters="clr-namespace:CarAnalysisDashboard.Converters"/>
            <converters:FileSelectionConverter x:Key="FileSelectionConverter" xmlns:converters="clr-namespace:CarAnalysisDashboard.Converters"/>
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" xmlns:converters="clr-namespace:CarAnalysisDashboard.Converters"/>
            <converters:NumberFormatConverter x:Key="NumberFormatConverter" xmlns:converters="clr-namespace:CarAnalysisDashboard.Converters"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
